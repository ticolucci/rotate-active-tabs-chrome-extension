{
  "manifest_version": 3,
  "name": "Rotate Active Tabs",
  "version": "1.0.0",
  "description": "Navigate between your last active tabs using keyboard shortcuts",
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_page": "options.html",
  "commands": {
    "rotate-tabs": {
      "suggested_key": {
        "default": "Ctrl+Q",
        "mac": "MacCtrl+Q"
      },
      "description": "Rotate through active tabs"
    },
    "rotate-tabs-reverse": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q",
        "mac": "MacCtrl+Shift+Q"
      },
      "description": "Rotate through active tabs (reverse)"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
